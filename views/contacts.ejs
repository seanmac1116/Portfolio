<%- include('layouts/header.ejs') %>
   

       
      <br>

      <!-- Start of image-->
      <div class="container">
        <div class="row">
          <div class="col text-center">
            <img src="IMG/Me.jpg" alt="Me" width="10%">

          </div>
        </div>
      </div>

      <!-- End of image-->

      <br>

      <!-- Start contact form-->
      <div class="container">
        <div class="row">
          <div class="col-5 text-center contactform p-5">
            <form action="/submitContacts" method="post">
              <h3 class="md-4">Contact us</h3>
              <input type="text" class="form-control md-4" name="fname" aria-describedby="firtsname" placeholder="First Name">
              <input type="text" class="form-control md-4" name="lname" aria-describedby="lastname" placeholder="Last Name">
              <input type="text" class="form-control md-4" name="email" aria-describedby="emailHelp" placeholder="Email">
              <label for="selection" class="form-label">Reason for contact:</label>
              <select class="form-select md-4" aria-label="Default select example" name="reason">
                <option selected value="Bug">Bug</option>
                <option value="Opportunity">Opportunity</option>
                <option value="Connect">Connect</option>
              </select>
              <textarea class="form-control md-4" name="comment" rows="3" placeholder="">Comment</textarea>
              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
              
            </form>
          </div>
          <div class="col-5">
            <!--Google map-->
<div id="map-container-google-2" class="z-depth-1-half map-container" style="height: 100%">
  <iframe src="https://maps.google.com/maps?q=chicago&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0"
    style="width: 100%; height: 100%;" allowfullscreen></iframe>
</div>

<!--Google Maps-->
          </div>
        </div>
      </div>
      
      <!-- End contact form-->

      <br>

      <!--Start of Info-->
        <div class="container">
          <div class="row">
            <div class="col text-center">
              <h5>Information</h5>
            </div>
          </div>
          <div class="row">
            <div class="col text-center">
              <img src="IMG/GitHub-Mark-Light-64px.png" alt="GitHub">
            </div>
            <div class="col text-center">
              <img src="IMG/In-White-72.png" alt="linkedin">
            </div>
          </div>
        </div>
      <!--End of Info-->
      
